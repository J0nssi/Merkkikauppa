{
  "name": "haalarimerkkikauppa",
  "version": "0.0.1",
  "description": "A fullstack online store application for a school course project",
  "main": "server.js",
  "scripts": {
    "startServer": "node dist/server.js",
    "devServer": "nodemon dist/server.js",
    "watchServer": "tsc -w",
    "buildServer": "tsc",
    "testServer": "npm run buildClient && cp -R ./src/client/build ./src && mocha -r ts-node/register 'src/tests/**/*.ts'",
    "startClient": "cd ./src/client && npm run start",
    "buildClient": "cd ./src/client && npm run build",
    "testClient": "cd ./src/client && npm run test",
    "clean": "rm -rf ./dist",
    "copyFiles": "cp -R ./src/client/build ./dist",
    "build": "npm run clean && npm run buildServer && npm run buildClient && npm run copyFiles",
    "dev": "npm run watchServer & npm run devServer",
    "test": "npm run testServer"
  },
  "repository": {
    "type": "git",
    "url": "https://eta7800-21K-groupH@dev.azure.com/eta7800-21K-groupH/Merkkikauppa/_git/Merkkikauppa"
  },
  "author": "Lassi Köykkä, Joonas Vaija, Johannes Tikkanen",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.14",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-flash": "0.0.2",
    "@types/express-session": "^1.17.3",
    "@types/method-override": "0.0.31",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/passport": "^1.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/uuid": "^8.3.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "method-override": "^3.0.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "uuid": "^8.3.2"
  }
}
